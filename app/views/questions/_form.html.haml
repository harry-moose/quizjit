= simple_form_for @question, html: { multipart: true } do |f|
  -if @question.errors.any?
    #errors
      %h2
      = pluralize(@question.errors.count, "error")
      prevent this Question from saving
      %ul
      - @question.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.input :question, input_html: { class: 'form-control'}

  .form-group
    = f.input :opt1, input_html: { class: 'form-control'}
    = f.input :opt2, input_html: { class: 'form-control'}
    = f.input :opt3, input_html: { class: 'form-control'}
    = f.input :opt4, input_html: { class: 'form-control'}
    = f.button :submit, class: "btn btn-primary"
  
  .form-group
    = f.input :answer, input_html: { class: 'form-control'}